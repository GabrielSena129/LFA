# -LFApackage atividade;

import javax.swing.JOptionPane;

public class Coke {

public static void main(String[] args) {

JOptionPane.showMessageDialog(null, "Por favor insira o valor correto");

Integer[] value = { 10, 25 };

int valor = 0;

while (valor < 45) {
	
int coin = JOptionPane.showOptionDialog(null, "apenas moedas de R$0,10 e R$0,25 ", "Moedas",

		JOptionPane.DEFAULT_OPTION, JOptionPane.DEFAULT_OPTION, null, value, value[0]);

if (coin == 0) {
valor += 10;
} else if  (coin == 1){
valor += 25;
}

}

JOptionPane.showMessageDialog(null, "Aqui estÃ¡ sua coca, volte sempre!");

}
} 